{% extends 'layout.twig' %}

{% block body %}

    <h1>{% block title %}{% endblock %}</h1>

    <div class="row">
        <div class="offset-sm-1 col-sm-8">
            <div class="row">
                {% for post in posts %}
                    <div class="col-lg-4 col-md-6">
                        <div class="card">
                            <h6 class="card-header">{{ post.title }}</h6>
                            <p class="card-body card-text">{{ post.content | excerpt }}</p>
                            <p class="date_blog">{{ post.updatedAt | date("d/m/Y Ã  H:m:i") }}</p>
                            <a href="{{ root }}/post/{{ post.id }}" class="btn btn-default card-footer">Afficher l'article</a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="btn-group">
                    {% block pagination %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="btn-group-vertical category-group" role="group">
                {% for category in categories %}
                    {% if posts.0.category.slug == category.slug %}
                        <button class="btn btn-primary" disabled>{{ category.name }}</button>
                    {% else %}
                        <a href="{{ root }}/categorie/{{ category.slug }}-1" class="btn btn-outline-primary">{{ category.name }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
